<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.a_nil.hello.Add_record">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:id="@+id/name"
            android:textColor="#d6000000" />

        <TextView
            android:layout_width="match_parent"
            android:textSize="26sp"
            android:text="Anshul Dawar"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/editname"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/height"
            android:layout_toEndOf="@+id/height" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:id="@+id/height"
            android:textSize="26sp"
            android:textColor="#d6000000"
            android:layout_alignBottom="@+id/editheight"
            android:layout_alignLeft="@id/name"
            android:layout_toLeftOf="@+id/editheight"
            android:layout_alignParentRight="false"
            android:paddingBottom="5dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="in cm"
            android:id="@+id/editheight"
            android:maxWidth="3dp"
            android:layout_below="@+id/editname"
            android:layout_toRightOf="@+id/Thyroid" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:id="@+id/weight"
            android:textSize="26sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/editweight"
            android:paddingBottom="5dp"
            android:textColor="#d6000000" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editweight"
            android:hint="in kg"
            android:ems="10"
            android:inputType="numberDecimal"
            android:layout_below="@+id/editheight"
            android:layout_alignLeft="@+id/editheight"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Group"
            android:id="@+id/bloodgrp"
            android:textSize="26sp"
            android:layout_below="@+id/editweight"
            android:layout_alignParentLeft="true"
            android:textColor="#d6000000" />

        <TextView
            android:layout_width="76sp"
            android:layout_height="30sp"
            android:id="@+id/editblood"
            android:inputType="none"
            android:layout_below="@+id/editweight"
            android:layout_toEndOf="@+id/blood_pressure"
            android:text="AB+"
            android:textSize="20sp"
            android:gravity="bottom" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:id="@+id/radiogroup"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/editblood"
            android:layout_alignParentLeft="true" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single"
                android:id="@+id/radioButton"
                android:checked="false"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Married"
                android:id="@+id/radioButton2"
                android:checked="false" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Pressure"
            android:id="@+id/blood_pressure"
            android:layout_below="@+id/radiogroup"
            android:layout_alignParentLeft="true"
            android:textSize="26sp"
            android:textColor="#d6000000" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="in mm of hg"
            android:ems="10"
            android:id="@+id/editbloodpressure"
            android:layout_below="@+id/blood_pressure"
            android:layout_alignParentLeft="true" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Vision"
            android:textSize="26sp"
            android:layout_height="wrap_content"
            android:id="@+id/vision"
            android:layout_below="@id/editbloodpressure"
            android:textColor="#d6000000" />
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="out of 6/6"
            android:id="@+id/editvision"
            android:layout_below="@id/vision"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Haemoglobin"
            android:id="@+id/haemoglobin"
            android:textSize="26sp"
            android:layout_below="@+id/editvision"
            android:textColor="#d6000000" />
        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/edithaemoglobin"
            android:layout_below="@+id/haemoglobin"
            android:hint="in g/dl"
            android:inputType="number" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Sugar"
            android:id="@+id/bloodsugar"
            android:layout_below="@+id/edithaemoglobin"
            android:textSize="26sp"
            android:textColor="#d6000000" />
        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/editbloodsugar"
            android:layout_below="@id/bloodsugar"
            android:hint="in g/dl"
            android:inputType="number" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thyroxine"
            android:id="@+id/Thyroid"
            android:textSize="26sp"
            android:layout_below="@+id/editbloodsugar"
            android:textColor="#d6000000" />

        <EditText
            android:layout_width="120dp"
            android:id="@+id/edithyroid"
            android:layout_height="wrap_content"
            android:hint="(optional)"
            android:layout_below="@id/Thyroid"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="#006064"
            android:id="@+id/submit"
            android:layout_below="@id/edithyroid"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:visibility="visible"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

</ScrollView>
